<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.aleksandra.combined.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/camera_button"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:text="camera"
        android:onClick="OnCameraButtonClick"/>

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:text="gallery"
        android:onClick="OnGalleryButtonClick"/>

    <Button
        android:id="@+id/map_button"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:text="map"
        android:onClick="OnMapButtonClick"/>

    <Button
        android:id="@+id/scoresheet_button"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:text="scoresheet"
        android:onClick="OnScoresheetButtonClick"/>


</LinearLayout>
